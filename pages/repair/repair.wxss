.repair-list {
  height: 100%;
  padding: 0 2%;
}
.repair-item {
  background-color:#ADD8E6;
  width: 100%;
  margin-bottom: 5px;
  display: flex;
  justify-content: center;
  padding: 1.5% 0;
  border-radius: 0.34rem;
}
.item-status {
  width: 18%;
  height: 100%;
  text-align: center;
}
.item-status text {
  display: inline-block;
  width: 2.67rem;
  height: 2.67rem;
  line-height: 2.67rem;
  color: white;
  font-size: 0.65rem;
  border-radius: 50%;
}
.item-status-zero text{
  background-color: rgb(243, 78, 120);
}
.item-status-one text{
  background-color: rgb(243, 164, 50);
}
.item-status-two text{
  background-color: rgb(59, 151, 252);
}
.item-status-three text{
  background-color: rgb(85, 193, 84);
}
.item-content {
  width: 82%;
  /* padding: 0 2%; */
  font-size: 0.7rem;
}
.item-time {
  font-size: 0.65rem;
  color: #b0aeb5;
}
.item-code {
  display: flex;
  justify-content: space-between;
  padding: 1% 3%;
}
.item-text {
  width: 95%;
  padding: 1.5% 3%;
  font-size: 0.75rem;
  color: #888;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
