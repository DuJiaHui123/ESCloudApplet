/* pages/inspection/inspection.wxss */
.inspection{
  padding: 0rpx 30rpx;
}
.inspection-title{
  font-size: 45rpx;
  background-color: white;
  width: 100%;
  height: 70rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.inspection-title text{
  position: relative;
  left: 30rpx;
}
/* .inspection-content{
  margin-top: 80rpx;
} */
.inspection-box{
  width: 100%;
  height: 250rpx;
  position: relative;
  border-radius: 15rpx;
  background-color: #ADD8E6;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.box-header{
  width: 100%;
  height: 30%;
  border-bottom: 1px solid gainsboro;
  line-height: 75rpx;
}
.header-time{
  float: right;
}
.text-posider{
  position: relative;
  left: 20rpx;
}
.text-poside{
  position: relative;
  right: 20rpx;
}
.box-content{
  line-height: 52rpx;
}